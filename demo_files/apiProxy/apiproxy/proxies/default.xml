<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
  <PreFlow name="PreFlow">
    <Request>
    </Request>
    <Response/>
  </PreFlow>
  <Flows>
    <Flow name="airports-all">
      <Description/>
      <Request>
        <Step>
          <Name>Assign Parameters</Name>
        </Step>
      </Request>
      <Response/>
      <Condition>(proxy.pathsuffix MatchesPath "/airports*") and (request.verb = "GET")</Condition>
    </Flow>
    <Flow name="airport-by-id">
      <Description/>
      <Request>
        <Step>
          <Name>Assign Parameters</Name>
        </Step>
      </Request>
      <Response/>
      <Condition>(proxy.pathsuffix MatchesPath "/airports/*") and (request.verb = "GET")</Condition>
    </Flow>
    <Flow name="unknown-path-suffix">
      <Request>
        <Step>
          <Name>RaiseFault.404</Name>
        </Step>
      </Request>
    </Flow>
  </Flows>
  <PostFlow name="PostFlow">
    <Request>
      <Step>
        <Name>Set Integration Request</Name>
      </Step>
      <Step>
        <Name>Integration Callout</Name>
      </Step>
    </Request>
    <Response/>
  </PostFlow>
  <RouteRule name="default">
    <IntegrationEndpoint>default</IntegrationEndpoint>
  </RouteRule>
  <HTTPProxyConnection>
    <BasePath>/airports-app-integration-cicd</BasePath>
  </HTTPProxyConnection>
</ProxyEndpoint>
